{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/MP",
                "/Zi",
                "/Zc:wchar_t",
                "/permissive",
                "/GS",
                "/W3",
                "/EHsc",
                "/nologo",
                "/DUNICODE",
                "/D_UNICODE",
                // 仅编译
                "/c",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/../Common/*.cpp",
                // 指定 obj 的输出目录（中间产物）
                "/Fo${workspaceFolder}/build/",
                // 指定 PDB 的输出目录（程序数据库）
                "/Fd${workspaceFolder}/build/",

                // 然后链接
                "&&",
                "link.exe",
                "/OUT:${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",
                "${workspaceFolder}/build/*.obj",
                // "/Fe${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",
                // "/link",
                "User32.lib",
                "Gdi32.lib",
                "Kernel32.lib",
                "Advapi32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}